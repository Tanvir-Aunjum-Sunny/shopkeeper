<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="producttracker.playlagom.shopkeeper.MainActivity">

    <Button
        android:id="@+id/btnBrowseImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btnUploadImage"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/btnUploadImage"
        android:onClick="onClickBrowseImage"
        android:text="Browse Image" />

    <ImageView
        android:id="@+id/ivProduct"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>

    <EditText
        android:id="@+id/etProductName"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ivProduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter product name"/>

    <Button
        android:onClick="onClickUploadImage"
        android:id="@+id/btnUploadImage"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload image"/>
</RelativeLayout>
